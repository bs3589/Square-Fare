



<div class="container">
  <div class="row">
    <div class="span12">
      <div class="box-container">
        <div class="new_business">
          <h2 class="page-title">Edit Business</h2>
          <h4 class="center"><%= @business.name %></h4>


			<%= form_for @business do |f| %>
				<%= f.label :name %>
				<%= f.text_field :name %>
				<br>
				<%= f.label :description %>
				<%= f.text_area :description %>
				<br>
				<%= f.label :category %>
				<%= f.select :category_id, Category.all.map{ |f| [f.name, f.id] }, { }, style: "display: inline ;" %>
				 <br>
				<%= f.label :address %>
				<%= f.text_field :address %>
				<br>
				<%= f.label :phone %>
				<%= f.text_field :phone %>
				<br>
				<%= f.label :email %>
				<%= f.text_field :email %>
				<br>
				<%= f.label :website_url %>
				<%= f.text_field :website_url %>
				<br>
				<%= f.label :img_url %>
				<%= f.text_field :img_url %>
				<br>
				<%= f.label :menu_url %>
				<%= f.text_field :menu_url %>
				<br>
				<%= f.label :logo_url %>
				<%= f.text_field :logo_url %>
				<br>
				<%= f.label :latitude %>
				<%= f.text_field :latitude %>
				<br>
				<%= f.label :longitude %>
				<%= f.text_field :longitude %>
				<br>
				<%= f.label :twitter_url %>
				<%= f.text_field :twitter_url %>
				

				<%= f.submit class: "btn btn-large indigo accent-1"%>

			<% end %>

        </div>
      </div>
    </div>
  </div>
</div>