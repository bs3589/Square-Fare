<h1>Business Show Page</h1>
<span class="pull-right serif italic star-rating" data-score= <%= @avg_rating %> ></span>
<div class="row">

   
      <div class="container page-contain">


      
         
       <div class="col  m7">
          <div class="card">
            <div class="card-image">
              <img src=" <%= @business.img_url %> ">
              <span class="card-title"> <%= @business.name %> </span>
            </div>
            <div class="card-content business-description">
              <p> <%= @business.description %> </p>
            </div>
            <div class="card-action">
                           
              <!-- Modal - to be put into partial -->

<!-- <div class="container"> -->

  <!-- Trigger the modal with a button -->
  <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Menu</button>



  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog" style="max-height: 90%;">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title"> <%= @business.name %> </h4>
        </div>

        <!-- <div class="modal-body"> -->
         
          <object data=" <%= @business.menu_url %> " width="100%" height="350px">
    
</object>
          
        <!-- </div> -->
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
      
    </div>
  </div>
  
<!-- </div> -->
<!-- * -->

<a class="btn btn-info btn-lg right" href=" <%= @business.website_url %> ">Website</a>

            </div>
            <div class="card-action">
            <ul>
            	<li> <%= @business.address %> </li>
            	<br>
            	<li> <%= @business.phone %> </li>
            	
            </ul>
            </div>
          </div>
        </div>
     
      
      

        <div class="col m5">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= @business.name %> </span>

              <!-- Raty star rating -->
              <span class="star-rating" data-score=<%= @avg_rating %> ></span>

              <p> <%= @business.description %> </p>
            </div>
            <div class="card-action">
              <a href="#">This is a link</a>
              <a href="#">This is a link</a>
            </div>
          </div>
          
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title">Location</span>
              

                <div id="map" style="height: 200px; width: 100%;"></div>
          <script>
            function initMap() {
              var uluru = {lat: 33.753746, lng: -84.386330};
              var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 12,
                center: uluru
              });
              var marker = new google.maps.Marker({
                position: uluru,
                map: map
              });
            }
          </script>
          <script async defer
          src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB-9So3_0iQnabOvsyYEn1CSBQliSG78xc&callback=initMap">
          </script>
          <br>
          <%= @business.address %>

            </div>
            <div class="card-action">
              <a href="#">This is a link</a>
              <a href="#">This is a link</a>
            </div>
          </div>
        
        </div>
</div>

      </div>

<!-- card 2 -->
<hr class="page-divider">

<div class="row">
  <div class="col m12">
      <div class="container page-contain">



<div class="row">
        <div class="col s12 m10">
          <div class="card blue-grey darken-1">

            <div class="card-content white-text" style="height: 100px;">
            <div class="col m6">
              <h5 class="left">Tell Us What You Think!</h5>
            </div>
            <div class="col m6"
              <span class="card-title"><%= link_to "Add a Post", new_business_post_path(@business), class: "btn btn-large btn-primary right" %></span>
            </div>
            </div>
            <!-- <div class="card-action">
              

            </div> -->
          </div>
        </div>
      </div>



<br>
<br>
<br>

 <% @posts.each do |post| %>
  
  <div class="row">
        <div class="col s12 m10">
          <div class="card">  
          <div class="post-header">
              <h5><%= post.title %></h5>
              <p> <%= "#{post.user.first_name} #{post.user.last_name}" %>
              
                
            </div>     
            <hr class="post-divider">             
              <!-- <span class="card-title">Card Title</span>             -->

            <div class="card-content">
              <p class="star-rating">Rating: <%= post.rating %>/5</p>
              <br>
              <p> <%= post.content %> </p>
            </div>
            
          </div>
        </div>
      </div>

      <% end %>
</div>
</div>
