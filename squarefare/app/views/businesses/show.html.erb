          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title primary-font">Location</span>
              

                <div id="map" style="height: 200px; width: 100%;"></div>
          <script>
            function initMap() {
              var uluru = {lat: <%= @business.latitude %>, lng: <%= @business.longitude %>};
              var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 12,
                center: uluru
              });
              var marker = new google.maps.Marker({
                position: uluru,
                map: map
              });
            }
          </script>
          <script async defer
          src="https://maps.googleapis.com/maps/api/js?key=AIzaSyB-9So3_0iQnabOvsyYEn1CSBQliSG78xc&callback=initMap">
          </script>
